<module:CreateModuleClass xmlns="http://www.w3.org/1999/xhtml"
                    xmlns:module="app.module" xmlns:js="js.core"
                    xmlns:ui="js.ui" xmlns:view="sprd.view">

    <js:Content name="main">
        <div id="create">
            <div class="toolbar row-fluid">
                <div class="span12">
                    <h1>Create</h1>
                </div>
            </div>
            <div class="row-fluid panel create">
                <div class="span12">
                    <div class="row-fluid">
                        <div class="span6">
                            JS Designer goes here
                        </div>
                        <div class="span6">
                            <div>
                                <h4>Colors</h4>
                                <view:ColorSelector product="{product}" selectedItem="{{product.appearance}}" colorWidth="28"/>
                            </div>
                            <div>
                                <h4>Product types</h4>
                            </div>
                            <div class="buttons">
                                <ui:Button label="T-Shirt designer" type="warning"/>
                                <ui:Button label="Create product" type="success"/>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row-fluid">
                <div class="span12">
                    <ui:TabView>
                        <ui:Tab title="Positions">
                            Shows a list of default design positions
                        </ui:Tab>
                        <ui:Tab title="Product types">
                            Product types shown here
                        </ui:Tab>
                        <ui:Tab title="Restrictions">
                            Shows a list of restrictions
                        </ui:Tab>
                    </ui:TabView>
                </div>
            </div>
        </div>

    </js:Content>
</module:CreateModuleClass>