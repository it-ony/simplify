<module:DesignClass xmlns="http://www.w3.org/1999/xhtml"
                    xmlns:module="app.module" xmlns:js="js.core"
                    xmlns:ui="js.ui" xmlns:sprdView="sprd.view" class="design-module">

    <js:Content name="main">
        <div class="toolbar row-fluid">
            <div class="span12">
                <h1>Designs</h1>
            </div>
        </div>
        <div class="row-fluid">
            <div class="span12">
                <sprdView:ImageUpload notice="Drop your files here."/>
            </div>
        </div>
        <div class="row-fluid">
            <div class="span6">
                <sprdView:ImageUpload notice="Drop your files here."/>
            </div>
            <input type="text" class="pull-right search-query" placeholder="Search"
                   cid="searchInput" value="{searchTerm}"/>
        </div>
        <div class="design-container">
            <ui:TileList class="design-tile-list"
                         data="{designs()}"
                         heightUpdatePolicy="in"
                         widthUpdatePolicy="in"
                         prefetchItemCount="10"
                         height="300"
                         cols="5"
                         cid="tileList"
                         verticalGap="10"
                         itemHeight="150"
                         itemWidth="150"
                         horizontalGap="30">
                <js:Template name="renderer">
                    <sprdView:DesignImage width="150" height="150" design="{item}"/>
                </js:Template>
            </ui:TileList>
        </div>
    </js:Content>
    <js:Content name="footer">
        <h1>Footer</h1>
    </js:Content>
</module:DesignClass>